<UserControl x:Class="MMSaveEditor.View.Components.PersonPage_Trait"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">
    <StackPanel>
        <DataGrid x:Name="traitList" ItemsSource="{Binding}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding TraitStartDate, StringFormat=\{0:dd.MM.yy\}}" />
                <DataGridTextColumn Binding="{Binding TraitEndTime, StringFormat=\{0:dd.MM.yy\}}" />
                <DataGridTextColumn Binding="{Binding TraitName}" />
                <!--<Column FieldName="TraitStartDate" Title="Start Date" IsMainColumn="True"/>
                <Column FieldName="TraitEndTime" Title="End Date" IsMainColumn="True"/>
                <Column FieldName="TraitName" Title="Name" IsMainColumn="True"/>-->
                <DataGridTextColumn/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="removeTrait" Content="Remove Selected" Grid.Column="0" Click="removeTrait_Click" Height="30"/>
    </StackPanel>
</UserControl>
